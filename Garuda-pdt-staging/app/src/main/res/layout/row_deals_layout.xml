<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_deals"
        android:background="@drawable/border_rounded_gray"
        android:padding="10dp"
        android:layout_margin="@dimen/d10"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/image_deals"
                android:visibility="visible"
                android:background="@drawable/rounded_white"/>

            <ProgressBar
                android:layout_centerHorizontal="true"
                android:id="@+id/progressBar"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starbuck Summarecon"
                    android:textSize="15dp"
                    android:id="@+id/title_deals"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="2">
                <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/total_deal"
                    android:text="40.000"/>
            </LinearLayout>

        </LinearLayout>


        <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iced frapucinno (Tall, 12fl, oz)"
            android:layout_marginBottom="10dp"
            android:id="@+id/info_deals"/>
    </LinearLayout>



</LinearLayout>