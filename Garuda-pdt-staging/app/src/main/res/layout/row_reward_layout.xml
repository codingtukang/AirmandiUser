<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/container_reward_list"
        android:layout_marginBottom="@dimen/d20">
        <LinearLayout
            android:layout_width="@dimen/d60"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:id="@+id/reward_icon"
                android:src="@drawable/icon_wallet"
                />
        </LinearLayout>

        <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reward_name"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d10"
            />
    </LinearLayout>

</LinearLayout>