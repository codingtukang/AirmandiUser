<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/d30">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:inputType="number"
                android:textSize="@dimen/s14"
                android:id="@+id/no"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/starDust_opacity_40"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:visibility="visible"
                android:id="@+id/icon_purchase"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:id="@+id/input_amount"
            android:visibility="gone"
            android:layout_marginTop="@dimen/d40">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:inputType="number"
                android:textSize="@dimen/s14"
                android:hint="Masukkan Jumlah Pembayaran anda"
                android:id="@+id/amount_purchase"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/starDust_opacity_40"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50"
            android:id="@+id/pick_service"
            android:layout_marginTop="@dimen/d30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_purchase"
                android:textSize="@dimen/s18"
                android:textColor="#3C92CA"
                android:visibility="gone"
                android:text="Rp 49.000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/info_purchase"
                android:layout_below="@id/price_purchase"
                android:textSize="@dimen/s14"
                android:text="Pilih Paket"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/starDust_opacity_40"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="@dimen/d10"
                android:layout_height="@dimen/d10"
                android:src="@drawable/down_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <Button
            android:layout_width="@dimen/d140"
            android:layout_height="@dimen/d40"
            android:background="@drawable/green_button"
            android:textColor="@color/white"
            android:id="@+id/next_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d40"
            android:text="ISI PAKET DATA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/d10"
            android:id="@+id/container_list_service"
            android:visibility="gone"
            android:background="@drawable/border_round_white"
            android:padding="@dimen/d10">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/purchase_list"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>