<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/toolbar" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/starDust_opacity_40"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/container_home" />
        <LinearLayout
            android:padding="@dimen/d15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d55"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/d25"
                android:id="@+id/menu"
                android:src="@drawable/ic_baseline_logo"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/d25"
                android:src="@drawable/ic_outline_camera_alt_24px"
                android:id="@+id/scan_barcode"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/d25"
                android:src="@drawable/ic_outline_feeds"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/d25"
                android:id="@+id/bayar"
                android:src="@drawable/ic_outline_transaction"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/d25"
                android:src="@drawable/ic_outline_account"/>

        </LinearLayout>
    </LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/d15"
        fab:menu_icon="@drawable/ic_baseline_logo_white"
        fab:menu_colorNormal="#1565C0"
        fab:menu_colorPressed="#2272CD"
        fab:menu_colorRipple="#62B2FF"
        fab:menu_labels_maxLines="2"
        fab:menu_labels_ellipsize="end"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_labels_style="@style/MenuLabelsStyle"
        app:menu_labels_textSize="@dimen/s16"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/transferSaldoFabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="Topup Saldo"
            android:src="@drawable/ic_transfer_saldo"
            style="@style/MenuButtonsSmall"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/requestSaldoFabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="Request Saldo"
            android:src="@drawable/ic_request_saldo"
            style="@style/MenuButtonsSmall"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/splitBillFabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_split_bills"
            fab:fab_label="Split Bills"
            style="@style/MenuButtonsSmall"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/tarikSaldoFabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tarik_saldo"
            fab:fab_label="Tarik Saldo"
            style="@style/MenuButtonsSmall"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/undangTemanFabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_undang_teman"
            fab:fab_label="Undang Teman"
            style="@style/MenuButtonsSmall"/>

    </com.github.clans.fab.FloatingActionMenu>
</FrameLayout>