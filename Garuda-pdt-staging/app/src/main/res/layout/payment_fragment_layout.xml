                                    android:layout_height="@dimen/d30"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:text="Merchant"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/d80"
                                android:layout_height="@dimen/d70"
                                android:background="@drawable/border_round_light_gray"
                                android:layout_margin="@dimen/d5"
                                android:layout_columnSpan="2"
                                android:layout_rowSpan="2"
                                android:id="@+id/payment_parking"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="gone"
                                >

                                <ImageView
                                    android:layout_width="@dimen/d35"
                                    android:layout_height="@dimen/d35"
                                    android:layout_marginTop="@dimen/d10"
                                    android:src="@drawable/parking"/>
                                <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/d30"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:text="Parkir"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/d100"
