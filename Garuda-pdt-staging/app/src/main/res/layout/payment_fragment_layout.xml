<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ocean">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/d15"
        android:paddingTop="@dimen/d15"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d150"
            android:layout_gravity="center"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_payment_info"
                    android:paddingVertical="@dimen/d10"
                    android:paddingHorizontal="@dimen/d15"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/name"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:text="Nama Pengguna"
                            android:textColor="@color/white"/>
                        <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Phone Number"
                            android:id="@+id/phone"
                            />
                        </LinearLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/s20"
                            android:id="@+id/balance"
                            android:textColor="@color/white"
                            android:text="Rp. 0.00"
                            android:textAlignment="textEnd"
                            android:layout_gravity="end"

                            android:layout_marginTop="@dimen/d10"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/d25"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/topup_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Top Up"
                            android:background="@color/transparent"
                            android:drawableTop="@drawable/ic_sq_plus"
                            android:drawablePadding="@dimen/d10"
                            android:textAllCaps="false"
                            android:textColor="@color/white"/>
                        <Button
                            android:id="@+id/bayar_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bayar"
                            android:background="@color/transparent"
                            android:drawableTop="@drawable/ic_sq_bayar"
                            android:drawablePadding="@dimen/d10"
                            android:textAllCaps="false"
                            android:textColor="@color/white"/>
                        <Button
                            android:id="@+id/pulsa_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pulsa"
                            android:background="@color/transparent"
                            android:drawableTop="@drawable/ic_sq_phone"
                            android:drawablePadding="@dimen/d10"
                            android:textAllCaps="false"
                            android:textColor="@color/white"/>
                        <Button
                            android:id="@+id/pln_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PLN"
                            android:background="@color/transparent"
                            android:drawableTop="@drawable/ic_sq_light"
                            android:drawablePadding="@dimen/d10"
                            android:textAllCaps="false"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/d110"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/d10"
                    android:visibility="gone"
                    android:id="@+id/member_number_container"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Member Number"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/member_no"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/d10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notif_blue"/>
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/feedPagerIndicatorImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/indicator_tab_1"/>
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_compose_blue"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Pampasy point"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/point"
                android:textStyle="bold"
                android:text="0"
                android:textSize="@dimen/s20"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/d20">
            <Button
                android:layout_width="@dimen/d80"
                android:layout_height="@dimen/d40"
                android:text="Deals"
                android:id="@+id/deal_btn"
                android:background="@drawable/border_round_light_blue"
                android:textAllCaps="false"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
