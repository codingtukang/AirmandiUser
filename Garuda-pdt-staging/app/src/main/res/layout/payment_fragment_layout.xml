                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/d35"
                                    android:layout_height="@dimen/d35"
                                    android:layout_marginTop="@dimen/d10"
                                    android:src="@drawable/icon_pasca"/>
                                <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/d30"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:text="@string/pascabayar"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/d80"
                                android:layout_height="@dimen/d70"
                                android:layout_margin="@dimen/d5"
                                android:layout_columnSpan="2"
                                android:layout_rowSpan="2"
                                android:background="@drawable/border_round_light_gray"
                                android:id="@+id/register_bpjs"
                                android:visibility="gone"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="@dimen/d35"
                                    android:layout_height="@dimen/d35"
                                    android:src="@drawable/icon_bpjs"/>
                                <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/d30"
                                    android:layout_marginTop="@dimen/d5"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:text="BPJS Ketenagakerjaan"/>
                            </LinearLayout>

                        </GridLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

