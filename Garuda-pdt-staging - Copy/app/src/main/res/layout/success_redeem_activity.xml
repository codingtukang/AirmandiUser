<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="400dp"
        android:layout_marginTop="@dimen/d60"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_round_white"
        android:orientation="vertical">
        <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELAMAT"
            android:textSize="@dimen/s16"
            android:layout_marginTop="@dimen/d50"
            android:layout_gravity="center_horizontal"/>
        <com.pasyappagent.pasy.component.fontview.RobotoLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s12"
            android:layout_gravity="center_horizontal"
            android:text="Anda mendapatkan bonus reward agen berupa"/>
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/starDust_opacity_40"
            android:layout_margin="@dimen/d20"
            />
        <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
            android:layout_width="@dimen/d200"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/d25"
            android:textAlignment="center"
            android:id="@+id/redeem_name"/>

        <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/order_id_redeem"
            android:textAlignment="center"/>

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/starDust_opacity_40"
            android:layout_margin="@dimen/d20"
            />
        <com.pasyappagent.pasy.component.fontview.RobotoLightTextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Tim kami akan segera menghubungi anda untuk proses verifikasi data dan proses penyerahan bonus reward agen"/>

        <com.pasyappagent.pasy.component.fontview.RobotoLightTextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/d10"
            android:text="atau hubungi call center untuk proses verifikasi lebih cepat di"/>

        <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d15"
            android:text="(021) 82740401"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/success"
        android:layout_marginTop="@dimen/d30"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="@dimen/d150"
        android:layout_height="@dimen/d40"
        android:id="@+id/ok_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="OK"
        android:layout_marginBottom="@dimen/d40"
        android:background="@drawable/green_button"/>
</RelativeLayout>