<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d100"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL CASHBACK"
                        android:textSize="@dimen/s15"/>
                    <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_cashback"
                        android:textSize="@dimen/s30"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/redeem_btn"
                    android:layout_marginLeft="@dimen/d20"
                    android:src="@drawable/group_btn"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/starDust_opacity_40"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d70"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s10"
                        android:text="CASHBACK REKRUT"/>
                    <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s10"
                        android:id="@+id/agent_cashback"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/d40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/starDust_opacity_40"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s10"
                        android:text="CASHBACK TRANSAKSI"/>
                    <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s10"
                        android:id="@+id/komisi_agent"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/d40"
                    android:layout_gravity="center_vertical"
                    android:background="@color/starDust_opacity_40"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s10"
                        android:text="CASHBACK TOPUP"/>
                    <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s10"
                        android:id="@+id/komisi_topup"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/starDust_opacity_40"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/d10">
                <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_marginBottom="@dimen/d10"
                    android:layout_marginTop="@dimen/d20"
                    android:text="REWARD AGEN"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/border_round_white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d90">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d20"
                            android:orientation="vertical">
                            <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TOTAL AGEN PREMIUM"/>
                            <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/total_agent"
                                android:textSize="@dimen/d45"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="@dimen/d100"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true">
                            <com.github.lzyzsd.circleprogress.ArcProgress
                                android:id="@+id/progress_redem"
                                android:layout_width="70dp"
                                android:layout_height="80dp"
                                android:layout_margin="@dimen/d10"
                                android:layout_centerHorizontal="true"
                                android:background="@color/white"
                                custom:arc_finished_color="#2CC013"
                                custom:arc_unfinished_color="#3C92CA"/>
                            <ImageView
                                android:layout_width="@dimen/d40"
                                android:layout_height="@dimen/d40"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/icon_reward"
                                android:background="@color/white"
                                android:src="@drawable/icon_handphone_green"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        android:id="@+id/redem_handphone"
                        android:background="@drawable/border_round_light_grey"
                        android:layout_margin="@dimen/d10"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="@dimen/d40"
                                android:layout_height="@dimen/d40"
                                android:src="@drawable/icon_handphone"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Handphone"
                                android:textColor="@color/white"/>
                            <com.pasyappagent.pasy.component.fontview.RobotoLightTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="35 Agen Premium"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        android:background="@drawable/border_round_light_grey"
                        android:id="@+id/redem_motor"
                        android:layout_margin="@dimen/d10"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="@dimen/d40"
                                android:layout_height="@dimen/d40"
                                android:src="@drawable/icon_motor"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sepeda Motor Matic"
                                android:textColor="@color/white"/>
                            <com.pasyappagent.pasy.component.fontview.RobotoLightTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500 Agen Premium"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        android:background="@drawable/border_round_light_grey"
                        android:layout_margin="@dimen/d10"
                        android:id="@+id/redem_umroh"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="@dimen/d40"
                                android:layout_height="@dimen/d40"
                                android:src="@drawable/icon_umroh"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ibadah Umroh"
                                android:textColor="@color/white"/>
                            <com.pasyappagent.pasy.component.fontview.RobotoLightTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1000 Agen Premium"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        android:background="@drawable/border_round_light_grey"
                        android:layout_margin="@dimen/d10"
                        android:id="@+id/redem_mobil"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="@dimen/d40"
                                android:layout_height="@dimen/d40"
                                android:src="@drawable/icon_mobil"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobil"
                                android:textColor="@color/white"/>
                            <com.pasyappagent.pasy.component.fontview.RobotoLightTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6000 Agen Premium"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>