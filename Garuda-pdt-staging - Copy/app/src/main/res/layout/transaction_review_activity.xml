<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/d30">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transaction_info"/>
                    <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s12"
                        android:id="@+id/transaction_info_more"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d40"
                    android:gravity="right"
                    android:layout_weight="5">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/icon_transaction"/>
                </LinearLayout>
            </LinearLayout>

            <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s10"
                android:layout_marginTop="@dimen/d20"
                android:text="Order ID"/>
            <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s14"
                android:id="@+id/order_id_text"
                />

            <EditText
                android:layout_width="@dimen/d150"
                android:layout_height="wrap_content"
                android:hint="Masukkan kode Refferal"
                android:id="@+id/refferal_code"
                android:inputType="text"
                android:textSize="@dimen/s12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:text="Detail Transaksi"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/transaction"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Transaction"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transaction_amount"
                    android:text="0"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Denda"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Biaya Layanan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/fee"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/d20"
                android:layout_marginBottom="@dimen/d10"
                android:background="@color/starDust_opacity_40"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#505050"
                    android:textSize="@dimen/s12"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="TOTAL"/>
                <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:id="@+id/total_transaction"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/d30"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/topup_btn"
                    android:background="@drawable/border_round_white"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/d30"
                        android:layout_height="@dimen/d30"
                        android:layout_gravity="center"
                        android:id="@+id/transaction_icon"
                        android:layout_marginLeft="@dimen/d10"
                        android:src="@drawable/p_logo"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >
                        <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/s15"
                            android:id="@+id/saldo_text"
                            android:text="Saldo Anda"/>
                        <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:id="@+id/balance"/>
                    </LinearLayout>

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:gravity="right|center_vertical">-->
                    <!--<ImageView-->
                    <!--android:layout_width="@dimen/d20"-->
                    <!--android:layout_height="@dimen/d20"-->
                    <!--android:src="@drawable/arrow"/>-->
                    <!--</LinearLayout>-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right">
                    <LinearLayout
                        android:layout_width="@dimen/d140"
                        android:layout_height="match_parent"
                        android:id="@+id/cc_btn"
                        android:background="@drawable/border_round_white"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="@dimen/d30"
                            android:layout_height="@dimen/d20"
                            android:id="@+id/cc_image"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/d10"
                            android:src="@drawable/credit_card"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            >
                            <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/s15"
                                android:id="@+id/CC_text"
                                android:text="Credit Card"/>

                        </LinearLayout>

                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:gravity="right|center_vertical">-->
                        <!--<ImageView-->
                        <!--android:layout_width="@dimen/d20"-->
                        <!--android:layout_height="@dimen/d20"-->
                        <!--android:src="@drawable/arrow"/>-->
                        <!--</LinearLayout>-->
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/error_balance"
                android:text="Saldo anda tidak cukup, Silahkan top up"
                android:textColor="@color/red_voucher"
                android:layout_marginTop="@dimen/d10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal">
                <Button
                    android:layout_width="@dimen/d150"
                    android:layout_height="@dimen/d40"
                    android:background="@drawable/green_button"
                    android:textColor="@color/white"
                    android:id="@+id/next_btn"
                    android:text="BAYAR"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>