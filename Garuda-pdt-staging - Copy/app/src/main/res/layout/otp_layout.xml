<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/d130">
        <ImageView
            android:layout_width="@dimen/d200"
            android:layout_height="wrap_content"
            android:id="@+id/image_otp"
            android:src="@drawable/pampasy_logo"/>
    </LinearLayout>

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:layout_width="@dimen/d300"
        android:layout_height="wrap_content"
        android:id="@+id/txt_pin_entry"
        android:layout_gravity="center_horizontal"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <com.pasyappagent.pasy.component.fontview.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak terima kode ? "/>
        <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resend_text"
            android:text="Kirim ulang"/>
    </LinearLayout>

    <com.pasyappagent.pasy.component.fontview.RobotoBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countdown_text"
        android:layout_marginTop="@dimen/d20"
        android:layout_gravity="center"
        android:text="01.00"/>
</LinearLayout>